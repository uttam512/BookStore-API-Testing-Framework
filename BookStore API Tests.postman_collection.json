			"name": "GET – All Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1️⃣ Status code should be 200\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 2️⃣ Response should be JSON\r",
							"pm.test(\"Response has valid JSON\", function () {\r",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");\r",
							"    pm.response.to.be.withBody;\r",
							"});\r",
							"\r",
							"// 3️⃣ Response should be an array of books\r",
							"pm.test(\"Response is an array of books\", function () {\r",
							"    const data = pm.response.json();\r",
							"    pm.expect(data).to.be.an(\"array\");\r",
							"    pm.expect(data.length).to.be.above(0);\r",
							"});\r",
							"\r",
							"// 4️⃣ Each book should have basic fields\r",
							"pm.test(\"Each book has id, title, description\", function () {\r",
							"    const data = pm.response.json();\r",
							"    data.forEach((book) => {\r",
							"        pm.expect(book).to.have.property(\"id\");\r",
							"        pm.expect(book).to.have.property(\"title\");\r",
							"        pm.expect(book).to.have.property(\"description\");\r",
							"    });\r",
							"});\r",
							""
						],
